<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:PlannerApp1.Views"
       x:Class="PlannerApp1.AppShell">

    <!-- TabBar for navigating between different sections of the app -->
    <TabBar>
        <Tab Title="Hem" Icon="home.png">
            <ShellContent ContentTemplate="{DataTemplate views:HomePage}" />
        </Tab>
        <Tab Title="Ny Aktivitet" Icon="add.png">
            <ShellContent ContentTemplate="{DataTemplate views:NewActivityPage}" />
        </Tab>
        <Tab Title="Schema" Icon="calendar.png">
            <ShellContent ContentTemplate="{DataTemplate views:MonthOverviewPage}" />
        </Tab>
    </TabBar>

</Shell>
